exec xautolock -time 10 -locker 'i3lock -c "#002200" -l "#ffffff" --24 -e -f'
exec xset s 300 5
exec xss-lock --transfer-sleep-lock -- i3lock --nofork -c "#002200" -l "#ffffff" --24 -e -f
